{
  "include": [
    "src/**/*",
    "test/**/*"
  ],
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "es5",
      "es6",
      "es7",
      "dom"
    ],
    "outDir": "./lib",
    "rootDir": "./src",
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "lib/*": [
        "lib/*"
      ]
    },
    "typeRoots": [
      "node_modules/@types",
      "src/@types"
    ],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "declaration": true
  }
}