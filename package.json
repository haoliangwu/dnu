{
  "name": "dnu",
  "version": "1.0.0",
  "files": [
    "lib"
  ],
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "license": "MIT",
  "scripts": {
    "test": "jest -i",
    "lint": "yarn tslint -c ./tslint.json -p . -t codeFrame",
    "prebuild": "rm -rf lib",
    "build": "yarn build:server && yarn build:client",
    "build:server": "tsc -p ./tsconfig.server.json -d && yarn babel lib --out-dir lib",
    "build:client": "tsc -p ./tsconfig.client.json -d"
  },
  "precommit": [
    "test"
  ],
  "jest": {
    "roots": [
      "<rootDir>/test"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    }
  },
  "devDependencies": {
    "@types/express": "^4.16.0",
    "@types/from2": "^2.3.0",
    "@types/jest": "^23.0.0",
    "@types/koa": "^2.0.46",
    "@types/koa-bodyparser": "^4.2.0",
    "@types/koa-router": "^7.0.28",
    "@types/node": "^10.3.1",
    "@types/node-fetch": "^2.1.1",
    "@types/raw-body": "^2.3.0",
    "@types/rmfr": "^2.0.0",
    "@types/supertest": "^2.0.4",
    "babel": "^6.23.0",
    "babel-cli": "^6.26.0",
    "babel-plugin-module-resolver": "^3.1.1",
    "body-parser": "^1.18.3",
    "express": "^4.16.3",
    "jest": "^23.1.0",
    "koa": "^2.5.1",
    "node-fetch": "^2.1.2",
    "pre-commit": "^1.2.2",
    "regenerator-runtime": "^0.11.1",
    "rmfr": "^2.0.0",
    "superagent": "^3.8.3",
    "supertest": "^3.1.0",
    "ts-jest": "^22.4.6",
    "tslint": "^5.10.0",
    "tslint-config-standard": "^7.0.0",
    "typescript": "^2.9.1"
  },
  "dependencies": {
    "@types/mkdirp": "^0.5.2",
    "from2": "^2.3.0",
    "koa-bodyparser": "^4.2.1",
    "koa-router": "^7.4.0",
    "mkdirp": "^0.5.1",
    "raw-body": "^2.3.3",
    "stream-concat": "^0.3.0",
    "streamifier": "^0.1.1"
  },
  "peerDependencies": {
    "express": "^4.0.0",
    "koa": "^2.0.1"
  }
}
